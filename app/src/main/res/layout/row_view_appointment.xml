<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:baselineAligned="false"
        android:elevation="4.0dip"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="8.0dip">

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="11.0sp"
            android:padding="@dimen/dp_2"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="11.30 AM"
            android:gravity="center"
            android:textColor="@color/color_grey_800"
            android:textSize="11.0sp"
            android:padding="@dimen/dp_2"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Appointment with Mr. Matin, FCI (BD) Ltd."
            android:textColor="@color/color_grey_900"
            android:textSize="11.0sp"
            android:padding="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_2"/>



        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remarks"
            android:gravity="center"
            android:textColor="@color/color_grey_800"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_2"
            android:textSize="11.0sp"
            android:padding="@dimen/dp_2" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                app:srcCompat="@drawable/vector_ic_pencil_black" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                app:srcCompat="@drawable/vector_ic_delete" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>