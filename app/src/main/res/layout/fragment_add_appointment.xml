<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_60"
            android:gravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_date"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/shape_rectangle_border_grey_bg_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/shape_rectangle_border_grey_bg_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/vector_ic_appointment" />

                            <EditText
                                android:id="@+id/et_appointment_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:inputType="date"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_grey_600"
                                android:textColorHint="@color/color_grey_600"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_serial_number"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/shape_rectangle_border_grey_bg_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/vector_ic_serial" />

                            <EditText
                                android:id="@+id/et_serial_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_grey_600"
                                android:textColorHint="@color/color_grey_600"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_time"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/shape_rectangle_border_grey_bg_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/vector_time_empty" />

                            <EditText
                                android:id="@+id/et_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:inputType="datetime"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_grey_600"
                                android:textColorHint="@color/color_grey_600"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_from_date"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    android:visibility="gone"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/shape_rectangle_border_grey_bg_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/vector_ic_calendar" />

                            <EditText
                                android:id="@+id/et_from_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:inputType="date"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_grey_600"
                                android:textColorHint="@color/color_grey_600"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_to_date"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    android:visibility="gone"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/shape_rectangle_border_grey_bg_white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="@drawable/vector_ic_calendar" />

                            <EditText
                                android:id="@+id/et_to_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:focusable="false"
                                android:gravity="center_vertical"
                                android:inputType="date"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_grey_600"
                                android:textColorHint="@color/color_grey_600"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_with"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/shape_rectangle_border_grey_bg_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_appointment_with"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@color/color_grey_600"
                            android:textColorHint="@color/color_grey_600"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/view_appointment_remarks"
                        android:textColor="@color/color_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="#ffff0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/shape_rectangle_border_grey_bg_white"
                    app:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_rectangle_border_grey_bg_white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="left"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_10"
                            android:text=""
                            android:textColor="@color/color_grey_600"
                            android:textColorHint="@color/color_grey_600"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height=".9dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorShadeBlue"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:background="@drawable/shape_rectangle_border_primary_bg_green"
                android:text="@string/view_save"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rectangle_border_bg_light_red"
                android:text="@string/view_delete"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_rectangle_border_bg_light_blue"
                android:text="@string/view_update"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
